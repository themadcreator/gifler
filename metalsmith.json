{
  "source"      : "site",
  "destination" : "gh-pages",
  "plugins"     : {
    "metalsmith-less" : {
      "render" : {
        "paths" : ["site"]
      }
    },
    "metalsmith-ignore" : [
      "**/_*",
      "**/_*/**/*",
      "**/*.less"
    ],
    "metalsmith-assets" : {
      "source"      : "site/assets",
      "destination" : "assets"
    },
    "metalsmith-raw"  : true,
    "./metalsmith-comment-docs"  : {
      "docs" : "./gifler.bare.js"
    },
    "metalsmith-jade" : {
      "pretty"      : true,
      "useMetadata" : true
    },
    "metalsmith-serve" : {
      "port" : 9000
    },
    "metalsmith-watch" : {
      "paths" : {
        "${source}/**/*" : "**/*"
      }
    }
  }
}